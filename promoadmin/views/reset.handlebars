<style>
 .content
    {
        margin: 0px !important;
    }


</style>
<section class="content">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Reset Password
                <small class="text-muted">Welcome to Promoworks Application</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);"><i class="zmdi zmdi-home"></i> Promoworks</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Forms</a></li>
                    <li class="breadcrumb-item active">Reset Password</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="body">
                        <h2 class="card-inside-title">Reset Password</h2>
                        <div class="row clearfix">
                            
                                
                            <div class="col-sm-12">
                                                                <form class="form-horizontal" action = "/reset/{{token}}" method="post">
                                                                    
                                                                    
                                                                    
                                                           {{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger text-center">{{msg}}</div>
      {{/each}}
{{/if}}


                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name='password' id='password', value='', placeholder='New password', autofocus=true />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" class="form-control" name="repeat" id="repeat" , value='', placeholder="Repeat password" />
                                    </div>
                                </div>
                                                     
           
                           
                                    
                                              
                                                   
                                                                    
                                                                    
                                                    <br/>                
                                                    <br/>                
                                                                                                                
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-success btn-block btn-outline m-b-10 m-l-5">Submit</button>
                                                </div>
                                                                    
                                                                    
                                                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Input --> 
    </div>
</section>
